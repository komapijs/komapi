{
  "name": "komapi",
  "version": "0.3.0",
  "description": "Komapi is an opinionated Node.js framework built on top of Koa 2.0",
  "author": "ersims",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/komapijs/komapi.git"
  },
  "keywords": [
    "komapi",
    "koa",
    "opinionated",
    "framework",
    "rest",
    "restful",
    "api",
    "app"
  ],
  "license": "MIT",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/komapijs/komapi/issues"
  },
  "homepage": "https://github.com/komapijs/komapi#README.md",
  "engines": {
    "node": ">= 4.4.5",
    "npm": ">= 2.15.5"
  },
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean --silent",
    "build": "babel -q -D -s true ./src/ --out-dir ./dist/",
    "clean": "del-cli ./dist ./coverage ./.nyc_output",
    "coverage": "nyc report --reporter=text --reporter=text-summary --reporter=html && nyc check-coverage --lines=100 --functions=100 --branches=100 --statements=100",
    "lint": "eslint index.js src/ test/",
    "pretest": "npm run clean --silent && npm run lint --silent",
    "test": "nyc --reporter=lcov ava --require babel-core/register --timeout 180s --concurrency=25",
    "posttest": "npm run coverage --silent",
    "prepublish": "npm run build",
    "watch": "ava --require babel-core/register --watch --serial --verbose"
  },
  "dependencies": {
    "ajv": "^4.7.5",
    "babel-runtime": "^6.11.6",
    "bluebird": "^3.4.1",
    "boom": "^4.1.0",
    "bunyan": "^1.8.1",
    "file-exists": "^2.0.0",
    "get-parameter-names": "^0.3.0",
    "joi": "^9.1.0",
    "koa": "^2.0.0-alpha.7",
    "koa-bodyparser": "^3.1.0",
    "koa-compose": "^3.1.0",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.1",
    "lodash": "^4.15.0",
    "moment": "^2.14.1",
    "node-uuid": "^1.4.7",
    "objection": "^0.6.0",
    "recursive-readdir-sync": "^1.0.6",
    "source-map-support": "^0.4.3"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-es2015-destructuring": "^6.16.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.16.0",
    "babel-plugin-transform-es2015-parameters": "^6.16.0",
    "babel-plugin-transform-es2015-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "del-cli": "^0.2.0",
    "eslint": "^3.6.1",
    "eslint-config-airbnb-base": "^10.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-security": "^1.2.0",
    "knex": "0.12.6",
    "nyc": "^8.3.0",
    "sleep-promise": "^2.0.0",
    "sqlite3": "^3.1.8",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0"
  },
  "files": [
    "dist",
    "src"
  ]
}
